import streamlit as st
import pandas as pd
import numpy as np

# Konfigurasi Halaman (Wide mode membuat dashboard lebih luas)
st.set_page_config(page_title="Dashboard Saya", layout="wide")

# --- JUDUL & SIDEBAR ---
st.title("üìä Dashboard Analisis Data Sederhana")
st.markdown("Contoh dashboard interaktif menggunakan Streamlit di VS Code.")

# Sidebar untuk filter
st.sidebar.header("Filter Data")
pilihan = st.sidebar.selectbox("Pilih Kategori:", ["Kategori A", "Kategori B", "Kategori C"])

# --- DATA GENERATOR (Contoh Data) ---
@st.cache_data
def load_data():
    return pd.DataFrame(
        np.random.randn(20, 3),
        columns=['Penjualan', 'Biaya', 'Keuntungan']
    )

df = load_data()

# --- MAIN PAGE ---
# Menampilkan Dataframe
st.subheader(f"Data untuk {pilihan}")
st.dataframe(df.style.highlight_max(axis=0), use_container_width=True)

# Membuat 3 kolom untuk metrik
col1, col2, col3 = st.columns(3)
col1.metric("Total Penjualan", "Rp 10.000.000", "+5%")
col2.metric("Total Biaya", "Rp 5.000.000", "-2%")
col3.metric("Keuntungan", "Rp 5.000.000", "+10%")

# Membuat Grafik
st.subheader("Visualisasi Data")
chart_data = pd.DataFrame(
    np.random.randn(20, 3),
    columns=['A', 'B', 'C']
)

st.line_chart(chart_data)

# --- FUNGSI TAMBAHAN ---
st.markdown("---")
st.write("Dibuat dengan ‚ù§Ô∏è menggunakan Streamlit & VS Code")
